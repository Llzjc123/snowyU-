page {
    width: 100%;
    background: #eee;
}

.center-list {
    width: 100%;
    height: 119rpx;
    background: #fff;
    border-bottom: 1rpx solid #eee;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.center-left {
    margin-left: 44rpx;
}

.center-right {
    margin-right: 46rpx;
    color: #808080;
}

.business-info {
    height: 440rpx;
    background: #f8614a;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.business-img image {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}

.login-box {
    width: 660rpx;
    margin: 0 auto;
    height: 552rpx;
    background: #fff;
    border-radius: 48rpx;
    position: relative;
    top: -136rpx;
    /* display: flex;
  flex-direction: column;
  align-items: center; */
    padding: 72rpx 50rpx 0;
    box-sizing: border-box;
}

.login-box .input-login {
    width: 558rpx;
    height: 84rpx;
    border: 1rpx solid #f8614a;
    border-radius: 36rpx;
    padding-left: 82rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}

.login-box .input-tel {
}

.login-box .input-pwd {
    margin-top: 46rpx;
}

.login-box .placeholder {
    font-size: 26rpx;
}

.login-box .user-icon {
    width: 29rpx;
    height: 31rpx;
    position: absolute;
    top: 30rpx;
    left: 30rpx;
}

.login-box .pwd-icon {
    width: 27rpx;
    height: 35rpx;
    position: absolute;
    top: 26rpx;
    left: 30rpx;
}

.login-box .login-tips {
    font-size: 24rpx;
    line-height: 40rpx;
    color: red;
}

.login-box .miss-pwd {
    color: #f8614a;
    text-align: right;
    margin-top: 21rpx;
}

.login-btn {
    margin-top: 44rpx;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background: #f8614a;
    border-radius: 38rpx;
    color: #fff;
    text-align: center;
}

.quitLogin-btn {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background: #f8614a;
    color: #fff;
    text-align: center;
    position: fixed;
    bottom: 0;
    border-radius: 0;
}
