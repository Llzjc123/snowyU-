.address_ul {
    margin-bottom: 150rpx;
}

.address_li {
    width: 100%;
    color: #333;
    background-color: #fff;
    margin-bottom: 20rpx;
    font-size: 27rpx;
}

.addressx {
    padding: 0 20rpx 37rpx 20rpx;
    border-bottom: 1px solid #eee;
}

.addressName {
    padding: 38rpx 0 17rpx 0;
}

.addressphone {
    margin-left: 45rpx;
}

.addressLock, .addressName {
    width: 710rpx;
}

.addressc {
    justify-content: space-between;
    padding: 0 20rpx;
    height: 95rpx;
    line-height: 95rpx;
}

.Choice {
    width: 43rpx;
    height: 43rpx;
    border-radius: 50%;
    background-color: #fff;
    font-size: 27rpx;
    color: #fff;
    display: inline-block;
    text-align: center;
    line-height: 43rpx;
    margin-right: 21rpx;
    border: 1rpx solid #dedede;
}

.active {
    background-color: #f8614a;
    border: 1rpx solid #f8614a;
}

.Maddress {
    font-size: 26rpx;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

.Maddress checkbox .wx-checkbox-input {
    border-radius: 50%;
}

.Maddress checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    color: #fff !important;
    border: 1px solid #f8614a;
    background-color: #f8614a;
    border-radius: 50%;
}

.edit, .del {
    width: 112rpx;
    height: 54rpx;
    border: 1rpx solid #999;
    border-radius: 8rpx;
    text-align: center;
    line-height: 54rpx;
    display: inline-block;
    font-size: 24rpx;
}

.del {
    margin-left: 20rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
    text-align: center;
    color: #fff;
    background-color: #f8614a;
    position: fixed;
    bottom: 0;
    display: flex;
}

.footer .system-address {
    flex:1;
}

.footer .weixin-address {
   flex:1;
    background-color: #f3b23e;
}
