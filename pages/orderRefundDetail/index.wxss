page {
    font-size: 28rpx;
    background-color: #f7f7f7;
    color: #333;
}

.refunding {
    height: 200rpx;
    background-color: #f8614a;
    padding-left: 60rpx;
    color: #fff;
    flex-direction: column;
    justify-content: center;
}

.refunding-time {
    margin-top: 26rpx;
    width: 620rpx;
}

.refunding-ing {
    width: 620rpx;
}

.refunding-li {
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #efefef;
    justify-content: space-between;
    font-size: 28rpx;
    color: #333;
    background-color: #fff;
}

.refunding-li .li-money {
    color: #ff2f3e;
}

.refunding-li .li-money text {
    font-size: 35rpx;
}

.refund-line {
    height: 166rpx;
    text-align: center;
    padding: 0 60rpx;
    flex-direction: column;
    justify-content: center;
}

.refund-line .line-text {
    font-size: 26rpx;
    color: #333;
}

.refund-line .line-time {
    font-size: 20rpx;
    color: #999;
    margin-top: 5rpx;
}

.refund-line .yuan {
    width: 18rpx;
    height: 18rpx;
    border-radius: 50%;
    background-color: #ccc;
}

.refund-line .yuan-icon {
    font-size: 34rpx;
    color: #ccc;
    width: 32rpx;
    height: 32rpx;
    background: url(http://images.jfyf.top/cwj/yanye/submit-success.png);
    background-size: 100% 100%;
}

.refund-line .line-tt {
    justify-content: space-between;
    margin-top: 30rpx;
}

.refund-line .yuan-yuan {
    justify-content: center;
    align-items: center;
}

.refund-line .yuan-line {
    width: 207rpx;
    height: 4rpx;
    background-color: #ccc;
}

.refund-line .yuan1 {
    margin-right: 0;
}

.refund-line .yuan2 {
    margin-left: 0;
}

.yuan-on {
    background-color: #4ac375 !important;
}

.yuan-onn {
    color: #4ac375 !important;
}

.refund-shop .shop-title {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #333;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #efefef;
    background-color: #fff;
}

.refund-shop .shop-xinxi {
    padding: 22rpx 30rpx;
    background-color: #fafafa;
    justify-content: space-between;
    border-bottom: 1rpx solid #efefef;
}

.refund-shop .shop-xinxi image {
    width: 165rpx;
    height: 165rpx;
}

.refund-shop .shop-text {
    width: 500rpx;
}

.refund-shop .text-title {
    color: #333;
    font-size: 28rpx;
    margin-top: 14rpx;
}

.refund-shop .text-con {
    font-size: 26rpx;
    color: #999;
    margin-top: 24rpx;
}

.refund-shop .shop-tui {
    /* height: 200rpx; */
    padding: 26rpx 30rpx;
    background-color: #fff;
}

.refund-shop .shop-tui view {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 20rpx;
}
