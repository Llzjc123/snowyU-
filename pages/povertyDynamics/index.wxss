page {
    width: 100%;
    background: #eee;
}

.poverty-dynamics-container {
    background: #eee;
    padding: 20rpx 25rpx;
    box-sizing: border-box;
}

.dynamics-item {
    width: 702rpx;
    background: #fff;
    padding: 22rpx;
    box-sizing: border-box;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
    position: relative;
}

.dynamics-item:last-child {
    margin-bottom: 0;
}

.dynamics-item .item-img {
    width: 656rpx;
    height: 280rpx;
}

.dynamics-item .item-img image {
    width: 100%;
    height: 100%;
}

.dynamics-item .item-title {
    margin-top: 10rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
}

.dynamics-item .item-decribe {
    line-height: 46rpx;
    font-size: 26rpx;
}

.dynamics-item .item-time {
    font-size: 18rpx;
    color: #939393;
}
