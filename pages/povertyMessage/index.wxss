.poverty-purchase-container {
    width: 100%;
    background: #fefefe;
    padding: 0 30rpx;
    box-sizing: border-box;
    padding-bottom: 100rpx;
}

.poverty-purchase-container .purchase-item {
    width: 690rpx;
    background: #fff;
    box-shadow: 0rpx 2rpx 10rpx #eee;
    margin: 20rpx 0;
    border-radius: 8rpx;
    padding:18rpx 0;
}

.user-view {
    display: flex;
    height: 140rpx;
    align-items: center;
    width: 100%;
    justify-content: space-between;
}

.user-view .user-img {
    width: 90rpx;
    height: 90rpx;
    border-radius: 10rpx;
    background: #eee;
    margin: 0 20rpx;
}

.user-view .name {
    font-size: 32rpx;
    flex: 1;
    color: #1a1a1a;
}

.user-view .btn-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0;
    margin-left: 40rpx;
    padding: 0;
    border: none;
    line-height: normal !important;
}

.user-view .btn-item::after {
    display: none;
    border: none;
}

.user-view .share-img {
    width: 28rpx;
    height: 30rpx;
    margin: 0 20rpx;
}

.title-view {
    display: flex;
    height: 80rpx;
    align-items: center;
    justify-content: space-between;
}

.title-view .title {
    font-size: 40rpx;
    color: #1a1a1a;
    margin: 0 20rpx;
}

.title-view .data {
    font-size: 24rpx;
    color: #646464;
    margin: 0 20rpx;
}

.content-img {
    display: flex;
    align-items: center;
    justify-content: center;
}

.content {
    padding: 20rpx 20rpx 40rpx;
    color: #4c4c4c;
    font-size: 32rpx;
    line-height: 1.2;
}

.to-btn {
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    height: 100rpx;
    background-color: #f8614a;
    box-sizing: border-box;
    border-top: 1px solid #efefef;
    justify-content: center;
    align-items: center;
    /* padding-right: 20rpx; */
    color: #fff;
}
