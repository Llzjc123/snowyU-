.activity-container {
    width: 100%;
}

.activity-container .occupancy-bg {
    position: relative;
}

.activity-container .bg-color {
    background: #f8614a;
    height: 90rpx;
    width: 100%;
}

.activity-container .bg-fff {
    width: 100%;
    height: 210rpx;
}

.activity-banner {
    width: 710rpx;
    height: 300rpx;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 10rpx;
    overflow: hidden;
}

.activity-banner image {
    width: 100%;
    height: 100%;
}

.activity-title {
    height: 116rpx;
    line-height: 116rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
}

.activity-container .title-view {
    width: 100%;
    height: 104rpx;
    /* background: #eee; */
    display: flex;
    align-items: center;
    justify-content: center;
}

.activity-container .title-view .title {
    width: 120rpx;
    height: 46rpx;
    position: relative;
    color: #333;
    font-size: 36rpx;
    font-weight: bold;
}

.activity-container .title-view .title>view {
    height: 100%;
    width: 100%;
    left: 0;
    bottom: 0;
    text-align: center;
    position: absolute;
}

.activity-container .title-view .title .line {
    background: #f1c8cb;
    height: 20rpx;
}

.activity-list .activity-item {
    width: 100%;
    height: 324rpx;
    padding: 20rpx 15rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: nowrap;
}
