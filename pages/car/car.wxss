.container {
    position: relative;
    background: #eee;
}

.scroll-wrapper {
    position: relative;
    z-index: 10;
}

.top-view {
    height: 80rpx;
    background: #f8614a;
}

.edit-wrapper {
    width: 100%;
    background: #f8614a;
    height: 80rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}

.edit-inner {
    padding: 0 50rpx 0 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.edit-btn {
    height: 100%;
    color: #fff;
    font-size: 24rpx;
    line-height: 80rpx;
    text-align: center;
}

.head {
    z-index: 99;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 70rpx;
    padding: 0 28rpx;
    background-color: #ff3d3d;
    color: #fff;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
}

.car-list {
    width: 690rpx;
    margin: 0 auto;
    margin-bottom: 16rpx;
}

.list-item-wrapper {
    width: 100%;
    background: #fff;
    padding: 20rpx 0;
    border-radius: 6rpx;
    margin-top: 16rpx;
}

.car-list .list-item {
    width: 100%;
    display: flex;
    position: relative;
    margin-bottom: 30rpx;
}

.select-btn {
    width: 90rpx;
    text-align: center;
    align-items: center;
    justify-content: center;
}

.store-name {
    padding: 0 18rpx 20rpx 18rpx;
    font-size: 28rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
}

.store-name .padding20 {
    padding: 0 12rpx 0 6rpx;
}

.store-name checkbox .wx-checkbox-input {
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
}

.store-name checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    color: #fff !important;
    border: 1px solid #f8614a;
    background-color: #f8614a;
    border-radius: 50%;
}

.select-btn checkbox .wx-checkbox-input {
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
}

.select-btn checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    color: #fff !important;
    border: 1px solid #f8614a;
    background-color: #f8614a;
    border-radius: 50%;
}

.picture {
    width: 190rpx;
    height: 190rpx;
    border-radius: 6rpx;
    overflow: hidden;
}

.picture image {
    width: 100%;
    height: 100%;
}

.pro-info {
    width: 358rpx;
    margin: 0 24rpx;
    display: block;
    /* flex-direction: column;
    justify-content: space-around; */
}

.pro-info .pro-title {
    width: 100%;
    height: 60rpx;
    color: #232629;
    font-size: 24rpx;
}

.pro-info .pro-des {
    margin: 14rpx 0;
    /* width: 148rpx; */
    padding: 0 10rpx 0 20rpx;
    background: #f5f5f5;
    text-align: center;
    height: 50rpx;
    display: inline-flex;
    align-items: center;
    font-size: 20rpx;
    color: #808080;
    justify-content: space-between;
}

.pro-info .pro-des view {
    background: #f5f5f5;
    border-radius: 6rpx;
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 10rpx;
}

.pro-info .pro-des .car-arrow {
    width: 16rpx;
    height: 10rpx;
}

.pro-info .pro-price {
    font-size: 36rpx;
    color: #f00;
}

.count-wrapper {
    position: absolute;
    right: 26rpx;
    bottom: 10rpx;
    width: 160rpx;
    height: 40rpx;
    border: 2rpx solid #e6e6e6;
    border-radius: 6rpx;
    align-items: center;
}

.count-wrapper text {
    flex: 1;
    height: 100%;
    font-size: 28rpx;
    color: #b3b3b3;
    display: flex;
    align-items: center;
    justify-content: center;
}

.count-wrapper .num {
    width: 74rpx;
    height: 100%;
    color: #3c3c3c;
    font-size: 20rpx;
    border-left: 2rpx solid #e6e6e6;
    border-right: 2rpx solid #e6e6e6;
    text-align: center;
}

.disabled {
    color: #ccc !important;
}

.foot {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 110rpx;
    background-color: #fff;
    border-top: 1rpx solid #e6e6e6;
    z-index: 99;
}

.pay-wrapper {
    height: 100%;
    width: 690rpx;
    margin: 0 auto;
    display: flex;
    align-items: center;
}

.foot .all-select {
    width: 40rpx;
    margin-right: 16rpx;
    display: flex;
    text-align: center;
    align-items: center;
    justify-content: center;
}

.foot .all-select  checkbox .wx-checkbox-input {
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
}

.foot .all-select checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    color: #fff !important;
    border: 1px solid #f8614a;
    background-color: #f8614a;
    border-radius: 50%;
}

.foot .count-num .din-normal {
    color: #f00;
}

.foot .count-num>text {
    color: #000;
}

.foot .pay-btn {
    width: 180rpx;
    height: 80rpx;
    background-color: #f8614a;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    border-radius: 40rpx;
    font-size: 32rpx;
}

.foot .left-wrapper {
    flex: 1;
    align-items: center;
    justify-content: space-between;
    margin-right: 30rpx;
}

.foot .left-wrapper .flex {
    align-items: center;
    width: 120rpx;
}

.delete-wrapper {
    width: 690rpx;
    margin: 0 auto;
    align-items: center;
    height: 100%;
}

.delete-wrapper .right-wrapper {
    /* width: 380rpx; */
    padding-right: 20rpx;
    justify-content: space-between;
}

.delete-wrapper .right-wrapper .collection-btn {
    width: 200rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    color: #ff7d2f;
    border: 1px solid #ff7d2f;
    border-radius: 30rpx;
    font-size: 28rpx;
}

.delete-wrapper .right-wrapper  .delete-btn {
    width: 120rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    color: #ff7d2f;
    border: 1px solid #ff7d2f;
    border-radius: 30rpx;
    font-size: 28rpx;
}

.mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 999;
}

/* pages/foo-tan/foo-tan.wxss */

.model-proinfo {
    z-index: 80;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
    transform: translate3d(0, 120%, 0);
    transition: all 0.3s cubic-bezier(0.25, 0.5, 0.5, 0.9);
}

.model-proinfo .hd-wrapper {
    position: relative;
    padding-left: 244rpx;
}

.model-proinfo .hd-wrapper image {
    width: 214rpx;
    height: 214rpx;
    border: 10rpx solid #fff;
    box-sizing: border-box;
    position: absolute;
    left: 0;
    top: -30rpx;
    box-shadow: 1px 1px 2px 1px #e4e4e4;
    border-radius: 5px;
}

.model-proinfo .hd-wrapper .txt-info {
    width: 445rpx;
    height: 180rpx;
    padding-top: 36rpx;
    box-sizing: border-box;
}

.model-proinfo .hd-wrapper .txt-info .num {
    margin-top: 25rpx;
    justify-content: space-between;
    align-items: flex-end;
}

.model-proinfo .hd-wrapper .txt-info .title {
    display: -webkit-box;
    display: -moz-box;
    display: box;
    -webkit-box-orient: vertical;
    -moz-box-orient: vertical;
    -webkit-line-clamp: 2;
    -moz-line-clamp: 2;
    overflow: hidden;
}

.model-proinfo .hd-wrapper .txt-info .num .price {
    font-size: 32rpx;
    color: #ff3d3d;
}

.model-proinfo .hd-wrapper .txt-info .num .stock {
    font-size: 24rpx;
    color: #666;
}

.model-proinfo .bd-wrapper .parameter-item {
    padding: 30rpx 0;
    border-bottom: 1px solid #eaeaea;
}

.model-proinfo .bd-wrapper .item-wrapper {
    display: flex;
    flex-wrap: wrap;
}

.model-proinfo .bd-wrapper .item-wrapper .item {
    height: 58rpx;
    text-align: center;
    line-height: 58rpx;
    background-color: #eee;
    font-size: 24rpx;
    border-radius: 3px;
    margin: 28rpx 35rpx 0 0;
    padding: 0rpx 20rpx;
}

.model-proinfo.show {
    transform: translate3d(0, 0, 0);
}

.count-wrappers {
    position: absolute;
    right: 20rpx;
    top: 50%;
    width: 160rpx;
    height: 47rpx;
    box-sizing: border-box;
    border: 1px solid #ddd;
    border-radius: 3px;
    align-items: center;
    margin-top: -23.5rpx;
}

.count-wrappers text {
    flex: 1;
    text-align: center;
    height: 100%;
    font-size: 36rpx;
    color: #454545;
    line-height: 37rpx;
}

.count-wrappers .num {
    flex: initial;
    text-align: center;
    width: 66rpx;
    color: #333;
    font-size: 28rpx;
    border-left: 1px solid #ddd;
    border-right: 1px solid #ddd;
    line-height: 47rpx;
}

.count-wrappers .disabled {
    color: #ccc;
}

.count-box {
    position: relative;
    height: 106rpx;
    line-height: 106rpx;
}

.foot-wrapper {
