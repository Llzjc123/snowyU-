.coupon-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40rpx;
}

.coupon-wrapper image {
    width: 712rpx;
    height: 156rpx;
}

.coupon-list {
    width: 712rpx;
    margin: 0 auto;
    height: 156rpx;
    margin-bottom: 30rpx;
    position: relative;
}

.bg-size {
  width: 712rpx;
  height: 156rpx;
}

.coupon-cpntent {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    color: #f8614a;
}

.coupon-cpntent .left {
    width: 152rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.coupon-cpntent .right {
    flex: 1;
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
}

.right .receive-now {
  width: 64rpx;
  height: 120rpx;
  position: absolute;
  right: 44rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 30rpx;
  line-height: 60rpx !important;
}

.right .use-now {
  height: 48rpx;
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
}

.right .use-now image {
  width: 107rpx;
  height: 48rpx;
}

.coupon-cpntent .right view {
    line-height: 1.6;
}
