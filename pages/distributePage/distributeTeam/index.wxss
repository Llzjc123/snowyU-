.distribute-team-container {
    width: 100%;
    min-height: 100%;
    background: #eee;
    padding-top: 94rpx;
    box-sizing: border-box;
}

.team-nav {
    width: 100%;
    height: 94rpx;
    color: #fff;
    background: #f8614a;
    display: flex;
    position: fixed;
    left: 0;
    top: 0;
}

.level {
    width: 50%;
    text-align: center;
    margin-top: 12rpx;
}

.line-bottom {
    width: 20rpx;
    margin: 0 auto;
    height: 4rpx;
    border-radius: 2rpx;
    background: #fff;
    margin-top: 6rpx;
}

.scroll-box {
    width: 100%;
    padding: 0rpx 30rpx 24rpx 30rpx;
    margin-top: 30rpx;
    box-sizing: border-box;
}

.team-item {
    width: 690rpx;
    height: 225rpx;
    margin-bottom: 24rpx;
    background: #fff;
    padding: 0 38rpx 0 24rpx;
    box-sizing: border-box;
}

.team-item:last-child {
    margin-bottom: 0;
}

.team-top {
    height: 155rpx;
    border-bottom: 1rpx solid #f5f5f5;
    display: flex;
    justify-content: space-between;
}

.item-info {
    height: 155rpx;
    display: flex;
    align-items: center;
}

.item-number {
    margin-top: 40rpx;
}

.team-bottom {
    height: 68rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.register-date {
    color: #808080;
    line-height: 46rpx;
}
