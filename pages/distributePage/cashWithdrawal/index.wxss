.cash-withdrawal-container {
    min-height: 100%;
    padding: 32rpx 30rpx 0 30rpx;
    background: #eee;
}

.cash-box {
    width: 690rpx;
    height: 700rpx;
}

.box-top {
    height: 200rpx;
    text-align: center;
    color: #f8614a;
    background: #fff;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.box-bottom {
    height: 480rpx;
    background: #fff;
    padding: 0 54rpx;
    box-sizing: border-box;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}

.box-bottom .cash-to-wechat {
    display: flex;
    height: 136rpx;
    align-items: center;
}

.wechat-icon {
    margin: 0 12rpx 0 124rpx;
    position: relative;
    top: 4rpx;
}

.input-wrapper {
    margin-top: 20rpx;
    height: 60rpx;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    align-items: center;
}

.input-wrapper input {
    font-size: 30rpx;
    padding: 0 20rpx;
    flex: 1;
}

.input-view {
    /* padding: 0 30rpx; */
    height: 120rpx;
    display: flex;
    align-items: center;
}

.input-view input {
    font-size: 30rpx;
    margin: 0 20rpx;
    flex: 1;
    border-bottom: 2rpx solid #f5f5f5;
}

.placeholder {
    color: #ccc;
    font-size: 26rpx;
    line-height: 36rpx;
}

.tips {
    margin-top: 26rpx;
    color: #a6a6a6;
}

.submit-btn {
    width: 690rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    color: #fff;
    background: #f8614a;
    border-radius: 40rpx;
    margin-top: 60rpx;
}
