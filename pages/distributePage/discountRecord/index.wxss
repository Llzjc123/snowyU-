.discount-record-container {
  width: 100%;
  min-height: 100%;
  background: #eee;
}

.record-item {
  width: 100%;
  height: 146rpx;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx 0 44rpx;
  box-sizing: border-box;
}

.record-item .blueWord {
  color:#0faeff;
}

.record-item .date {
  color:#adadad;
  margin-top:14rpx;
}

.record-item .record-right {
  color: #f8614a;
}