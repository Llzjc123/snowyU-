page {
    height: 100%;
    background: #eee;
}

.input-wrapper {
    width: 100%;
    height: 410rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.input-view {
    padding: 10rpx 40rpx;
    width: 570rpx;
    height: 60rpx;
    background: #eee;
    border-radius: 40rpx;
}

.btn-view {
    width: 360rpx;
    height: 80rpx;
    background: #f8614a;
    border-radius: 40rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
}

.result-wrapper {
    margin-top: 20rpx;
    background: #fff;
    padding: 20rpx 0;
}

.title-view {
    display: flex;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    font-size: 30rpx;
    justify-content: center;
}

.goods-view {
}

.goods-list {
    height: 200rpx;
    padding: 0 20rpx;
    width: 670rpx;
    margin: 10rpx auto;
    background: #eee;
    display: flex;
    border-radius: 10rpx;
    align-items: center;
}

.goods-image {
    width: 150rpx;
    height: 140rpx;
    border-radius: 6rpx;
}

.good-view {
    margin-left: 20rpx;
    flex: 1;
}

.good-name {
    color: #232629;
    font-size: 28rpx;
    height: 100rpx;
}

.good-info {
    color: #808080;
    font-size: 26rpx;
}

.dui-btn {
    width: 640rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    border-radius: 40rpx;
    background: #f8614a;
    font-size: 40rpx;
    margin: 20rpx auto;
}

.information {
    width: 100%;
    height: 364rpx;
    background-color: #fff;
    display: block;
    font-size: 28rpx;
    color: #333;
}

.information-li {
    height: 90rpx;
    padding: 0 20rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #f7f7f7;
}

.information-li label, .cashNum label {
    width: 170rpx;
    display: inline-block;
}

.information-li input, .cashNum input {
    width: 100%;
    height: 100%;
}

.placeholder {
    color: #ccc;
}
