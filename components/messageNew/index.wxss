.message-new {
    margin-top: 20rpx;
    width: 690rpx;
    padding: 0 30rpx;
    background: #fff;
}

.message-new .new-title {
    padding-top: 40rpx;
    height: 38rpx;
    color: #1a1a1a;
    font-size: 38rpx;
}

.message-new .new-desc {
    height: 76rpx;
    line-height: 76rpx;
    color: #808080;
    font-size: 28rpx;
}

.message-new .product-list {
    display: flex;
    flex-wrap: wrap;
}

.message-new .product-list .product-img:nth-child(4n) {
    margin-right: 0;
}

.message-new .product-list .product-img {
    width: 164rpx;
    height: 164rpx;
    margin-top: 10rpx;
    margin-right: 10rpx;
    background: #f3f3f3;
}

.message-new .product-img image {
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
}

.data-view {
    display: flex;
    align-items: center;
    color: #999;
    font-size: 22rpx;
    height: 88rpx;
}

.data-view image {
    width: 34rpx;
    height: 20rpx;
    margin-right: 6rpx;
}
