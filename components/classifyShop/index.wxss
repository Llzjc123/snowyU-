.shop-container {
    width: 100%;
    height: 100%;
    background: #fff;
    padding: 18rpx 22rpx 35rpx 22rpx;
    box-sizing: border-box;
    margin-bottom: 16rpx;
    border-radius: 8rpx;
}

.shop-top .shop-img image {
    width: 94rpx;
    height: 94rpx;
    border-radius: 10rpx;
}

.shop-container .shop-top {
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 27rpx;
}

.shop-container .shop-top-left {
    display: flex;
    /* width:100%; */
}

.shop-top .shop-top-right image {
    width: 120rpx;
    height: 48rpx;
}

.shop-top .title {
    margin-left: 22rpx;
    flex: 1;
}

.shop-top1 .title {
    margin-left: 19rpx;
}

.shop-top .title .name {
    width: 300rpx;
    font-size: 32rpx;
    font-weight: bold;
    line-height: 64rpx;
}

.shop-top1 .title .name {
    font-size: 28rpx;
    font-weight: bold;
    line-height: 52rpx;
}

.shop-top .title .info {
    width: 300rpx;
    color: #666;
    font-size: 18rpx;
}

.shop-top .title .info {
    font-size: 24rpx;
    color: #666;
}

.shop-top1 .shop-top-right image {
    width: 120rpx;
    height: 50rpx;
}

.shop-container .shop-top1 {
    height: 97rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32rpx;
}

.shop-container .shop-bottom {
    height: 180rpx;
    display: flex;
}

.shop-container .shop-bottom1 {
    height: 216rpx;
    display: flex;
}

.shop-bottom image {
    width: 180rpx;
    height: 180rpx;
    margin-right: 10rpx;
}

.shop-bottom1 image {
    width: 218rpx;
    height: 218rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
}
@import "../common.wxss";
