@import "../common.wxss";

.index-news {
    width: 100%;
    height: 106rpx;
    display: flex;
    align-items: center;
}

.index-news .left {
    /* height: 36rpx; */
    width: 160rpx;
    color: #ff2f3e;
    font-size: 32rpx;
    text-align: center;
    line-height: 36rpx;
    /* border-right: 2rpx solid #e5e5e5; */
    display: flex;
    justify-content: center;
}
.index-news .left:after {
    content: '';
    display: block;
    width: 2rpx;
    height: 38rpx;
    background: #e5e5e5;
    position: relative;
    left: 40rpx;
    top: 10rpx;
}
.index-news .left image {
  width: 60rpx;
  height: 60rpx;
}

.news-swiper {
  height: 106rpx;
}

.index-news .right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 10rpx;
}

.index-news .right .news-icon {
  display: inline-block;
  width: 76rpx;
  height: 30rpx;
  line-height: 30rpx;
  border:  2rpx solid #ff7763;
  border-radius: 10rpx;
  color: #ff8346;
  font-size: 18rpx;
  text-align: center;
}


.index-news .right .news-word {
    color: #8b8b8b;
    font-size: 24rpx;
    width: 370rpx;
    margin-left: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
