.hot-key-container {
    width: 100%;
    height: 46rpx;
    background: #ff2f3e;
    display: flex;
    align-items: center;
    color: #fff;
    font-size: 24rpx;
    padding-bottom:18rpx;
}

.hot-title {
    width: 94rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
}

.hot-item {
    padding: 0 46rpx;
    height: 40rpx;
    line-height: 40rpx;
    background: #ff4452;
    margin-left: 12rpx;
    border-radius: 50rpx;
}
